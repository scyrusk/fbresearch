= form_for @publication do |f|
  - if @publication.errors.any?
    #error_explanation
      %h2= "#{pluralize(@publication.errors.count, "error")} prohibited this publication from being saved:"
      %ul
        - @publication.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :venue
    = f.text_field :venue
  .field
    = f.label :summary
    = f.text_area :summary
  .field
    = f.label :year
    = f.text_field :year
  .actions
    = f.submit 'Save'
